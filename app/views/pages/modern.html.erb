<div class="main pages-modern">
    <div class="pages-modern-top">
        <h3>Please select the genre and start the quizzes!!</h3>
    </div>
    <div class="pages-modern-wrapper">
        <div class="pages-modern-quiz">
            <div class="pages-modern-title">
                <%= @genre1[0].subgenre %>
            </div>
            <div class="pages-modern-subwrapper">
                <div class="pages-modern-subtitle">
                    <% if @genre1[0].thirdgenre %>
                        <%= @genre1[0].thirdgenre %>
                    <% end %>
                </div>
                <div class="pages-modern-level">
                    <% @genre1.each_with_index do |genre, i| %>
                        <% @quiz = Quiz.find_by(subgenre_id: genre.sub_id, thirdgenre_id: genre.third_id) %>
                            <%= link_to("Lv.#{genre.level}", "/quizes/a/#{genre.sub_id}/#{genre.third_id}/#{genre.level}/#{@quiz.id}", {class: "pages-modern-btn l#{genre.level}"}) %>
                    <% end %>
